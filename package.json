{
  "name": "node-test",
  "version": "1.0.0",
  "description": "Reposit√≥rio voltado a simplificar e mostrar como fazer testes no node.js",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --inspect --transpile-only --ignore-watch node_modules src/shared/infra/http/server.ts",
    "build": " npx tsc",
    "start": "node ./dist/src/shared/infra/http/server.js",
    "lint": "eslint ./src  --ext .ts",
    "lint:fix": "eslint ./src  --ext .ts --fix",
    "style:check": "prettier --check \"src/**/*.ts\" ",
    "style:fix": "prettier --write \"src/**/*.ts\" ",
    "typeorm": "ts-node-dev -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:create": "npm run typeorm -- migration:create src/shared/infra/typeorm/migrations -n",
    "migration:run": "npm run typeorm -- migration:run -d src/shared/infra/typeorm/index.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.7",
    "eslint": "^9.5.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.3.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.2"
  },
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "joi": "^17.13.3",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsyringe": "^4.8.0",
    "typeorm": "^0.3.20"
  }
}
